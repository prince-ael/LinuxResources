<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorActionBar</item>
        <item name="colorPrimaryDark">@color/colorStatusBar</item>
        <item name="colorAccent">@color/colorLabel</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
        <item name="android:spinnerStyle">@style/SpinnerStyle</item>
        <item name="spinnerDropDownItemStyle">@style/SpinnerDropDownItemStyle</item>
    </style>

    <style name="tv_style_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="iv_style_icon">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="et_style_general">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/art_blue_line</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:focusable">false</item>

    </style>

    <!--       Spinner Styles -->
    <style name="SpinnerItemStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="SpinnerDropDownItemStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SpinnerStyle" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/art_spinner</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="tv_style_label_review">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="tv_style_data_review">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="keyboard_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/keypad_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingTop">@dimen/keypad_padding</item>
        <item name="android:paddingBottom">@dimen/keypad_padding</item>
    </style>

    <style name="floating_label_style" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="error_label_style" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="tab_text_appearence_style" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@drawable/state_tab</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="tab_selected_text_appearence_style" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@drawable/state_tab</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>